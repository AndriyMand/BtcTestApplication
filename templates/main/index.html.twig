{% extends 'base.html.twig' %}

{% block title %}BTC-UAH{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-sm bg-secondary navbar-dark">
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app.swagger_ui')}}">Open Swagger</a>
                </li>
            </ul>
        </div>  
    </nav>
    <div class="container" style="margin-top:30px">
        <div class="row">
            <div class="col" align="center">
                <h3>Bitcoin price</h3>
                <hr>
                <p>{{ rate|format_currency('UAH') }}</p>
            </div>
        </div>
    </div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{label}}" role="alert">
            {{message|trans}}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block footer %}
    <div class="jumbotron text-center" style="margin-bottom:0">
        <form method="post" class="needs-validation">
            <div class="row">
                <div class="col-5">
                    <label for="user_email">Receive information on changing the course</label>
                    <div class="row">
                        <div class="col">
                            <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Subscribe</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
{% endblock %}
